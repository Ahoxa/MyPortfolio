<a href="/">
	<!-- group, left and right are unique className not tailwind's name -->
	<span class="group inline-flex items-center h-14 leading-5 ml-5">
		<span class="left transition-all duration-300 ease-in-out text-4xl mr-1"
			>{'{'}</span
		>
		<div class="font-light text-xl">
			<p>Ahoxa</p>
			<p>Portfolio</p>
		</div>
		<span class="right transition-all duration-300 ease-in-out text-4xl ml-1"
			>{'}'}</span
		>
	</span>
</a>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const group = document.querySelector('.group');
		const left = document.querySelector('.left');
		const right = document.querySelector('.right');

		if (group && left && right) {
			group.addEventListener('mouseenter', () => {
				left.classList.add('translate-x-[-5px]');
				right.classList.add('translate-x-[5px]');
			});

			group.addEventListener('mouseleave', () => {
				left.classList.remove('translate-x-[-5px]');
				right.classList.remove('translate-x-[5px]');
			});
		}
	});
</script>
